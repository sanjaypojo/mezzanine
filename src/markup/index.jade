include layouts/head
body
  header.title-home
    h1 Sanjay Guruprasad
  main
    +section("Intro")
      p.intro-text.
        Entrepreneur. Hope to build a technology company that will
        transform the way we live and work.
      .intro-links
        a.link-btn-plain(href="/timeline")
          i.fa.fa-bicycle
          | Timeline
        a.link-btn-plain(target="_blank", href="https://in.linkedin.com/in/sanjaypojo")
          i.fa.fa-linkedin-square
          | LinkedIn
    +section("Projects")
      for project in projects
        +project(project.title, project.thumbnail,
          project.caption, project.link, project.detailPage)
  include layouts/footer
